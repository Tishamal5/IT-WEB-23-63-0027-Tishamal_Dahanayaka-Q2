@model IEnumerable<LMS.Models.Student>

@{
    ViewData["Title"] = "Student Info";
}

<h1>@ViewData["Title"]</h1>

@if (Model == null)
{
    <p>No students found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>City</th>
                <th>Course Id</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.City</td>
                    <td>@student.CourseId</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-primary">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
